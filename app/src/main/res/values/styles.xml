<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="prettyMargin">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="prettyPadding">
        <item name="android:padding">16dp</item>
    </style>

    <style name="topItemsText" parent="plainText">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="plainText" parent="textColor">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="plainTextWithoutSubtitle" parent="plainText">
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="titleText" parent="plainText">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="subtitleText" parent="plainText">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitleTextAfterTitle" parent="subtitleText">
        <item name="android:layout_marginTop">3dp</item>
    </style>

</resources>
